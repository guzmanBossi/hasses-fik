---
import { Icon } from "astro-icon";
import home0 from "../assets/CattAngelBlueCopy-2037x1512.jpg";
import onormalUtanRiktning from "../assets/OnormalUtanRiktning-top.jpg";
import { Image } from "@astrojs/image/components";
---

<div class="bg-black text-white">
    <header id="header" class="" x-data="{ atTop: true }">
        <nav class="w-full fixed top-0 bg-red-950 z-50  p-4 transition duration-1000 ease-in-out"
        :class="{ 'opacity-0': atTop, 'bg-opacity-60': !atTop }"
                    @scroll.window="atTop = (window.pageYOffset > 100) ? false: true">
            <div class="flex max-w-screen-md mx-auto">
                <div
                    class="mr-auto px-4 mb-2 max-w-screen-md flex transition duration-1000 ease-in-out">
                    <a href="#" class="text-2xl items-left text-gray-300">sköldpaddsön</a>
                </div>
                <div class="flex ml-auto pr-4">
                    <button class="text-white focus:outline-none">
                        <svg
                            class="w-6 h-6"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            xmlns="http://www.w3.org/2000/svg"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M4 6h16M4 12h16M4 18h16"></path>
                        </svg>
                    </button>
                </div>
            </div>
        </nav>
    </header>
</div>

<div class="flex justify-center mx-auto">
    <div class="w-full  mx-auto max-w-screen-md">
        <div class="relative">
            <Image src={home0} alt="bakgrundsbild" class="w-auto " />

            <div
                class="absolute bottom-0 left-1/4 w-1/2 h-60 mb-8">

                <div class="bg-red-100 p-2 bg-opacity-20 text-white rounded-lg"><h2>Öppetider</h2></div>
                <div class="mt-2 bg-red-100 p-2 bg-opacity-20 text-white rounded-lg"><h2>Hitta hit</h2></div>
                <div class="mt-2 bg-red-100 p-2 bg-opacity-20 text-white rounded-lg"><h2>Meny</h2></div>
                <div class="mt-2 bg-red-100 p-2 bg-opacity-20 text-white rounded-lg"><h2>Boka lokalen</h2></div>
                <div class="mt-2 bg-red-100 p-2 bg-opacity-20 text-white rounded-lg"><h2>Kontakt</h2></div>
            
            
            </div>
        </div>
    </div>
</div>

