---
import catAngelImg from "../assets/img/CattAngelBlueCopy-2037x1512.jpg";
import { Image } from "@astrojs/image/components";
---

<div id="openinghours" class="flex justify-center mx-auto h-full">
    <div class="w-full  mx-auto max-w-screen-md my-auto">
        <div class="relative h-full  text-white">
            <Image src={catAngelImg} alt="bakgrundsbild" class="h-full" />
            <div class="absolute bottom-12 sm:bottom-28 left-0 right-0  w-1/2 mx-auto ">
                <div class="p-2 text-xl sm:text-3xl"><h1>Öppettider</h1></div>
                <div class="bg-red-100 p-4 bg-opacity-20 rounded-lg" >
                    <div class=" p-2 text-base sm:text-2xl"><h1>Måndagar: stängt</h1></div>
                    <div class=" p-2 text-base sm:text-2xl"><h1>Tis-Tor: 11:00 - 19:00</h1></div>
                    <div class=" p-2 text-base sm:text-2xl"><h1>Fre-Sön: 11:00 - 21:00</h1></div>
                </div>
            </div> 
        </div>
    </div>
</div>
